<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config />
    <bean id = "ReaderBean" class = "spring.Reader" >
        <property name = "name" value = "Vova"/>
        <property name = "age" value = "29"/>
    </bean>
    <bean id = "libraryBean" class = "spring.Library" >
        <property name = "year" value = "2013"/>
        <property name = "autor" value = "John Dickens"/>
        <property name = "kind" value = "roman"/>
    </bean>
    <bean id = "libraryBean1" class = "spring.Library" >
        <property name = "year" value = "2016"/>
        <property name = "autor" value = "Agata Kristy"/>
        <property name = "kind" value = "detective"/>
    </bean>
</beans>




